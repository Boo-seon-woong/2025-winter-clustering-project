INGRESS_HOST=127.0.0.1
INGRESS_PORT=8080
INGRESS_NODES=boosw1@http://127.0.0.1:3000,boosw2@http://127.0.0.1:3001,boosw3@http://127.0.0.1:3002

INGRESS_UPSTREAM_TIMEOUT_MS=1500
INGRESS_MAX_BODY_BYTES=2097152

# Ingress overload control
INGRESS_MAX_INFLIGHT=1200
INGRESS_MAX_QUEUE=2400
INGRESS_QUEUE_TIMEOUT_MS=60

# Upstream keepalive pool
INGRESS_KEEP_ALIVE=1
INGRESS_KEEP_ALIVE_MSECS=1000
INGRESS_MAX_SOCKETS=4096
INGRESS_MAX_FREE_SOCKETS=512

# Circuit breaker per upstream
INGRESS_CB_FAILURE_THRESHOLD=6
INGRESS_CB_COOLDOWN_MS=800

# Backends are stateless in final_node, so sticky is optional and disabled by default.
INGRESS_STICKY_ENABLED=0
INGRESS_AFFINITY_COOKIE_ENABLED=0
INGRESS_AFFINITY_COOKIE=RDB_INGRESS_AFFINITY
INGRESS_AFFINITY_MAX_AGE_SEC=604800
INGRESS_AFFINITY_SAMESITE=Lax
INGRESS_AFFINITY_SECURE=0
